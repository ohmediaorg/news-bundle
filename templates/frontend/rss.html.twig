<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>

        <title>{{ settings.title }}</title>
        <link>{{ web_root }}</link>

        <description>{{ settings.desc }}</description>
        <language>en-us</language>
        <atom:link href="{{ web_root }}{{routePrefix}}/rss" rel="self" type="application/rss+xml" />
        {% for article in articles %}
        <item>
            <title>{{ article.title }}</title>
            <link>{{ web_root }}{{ path('news_item', {slug: article.slug}) }}</link>
            <description>{{ article.snippet }}</description>

            <pubDate>{{ article.getPublishDatetime|date('r', 'America/Regina') }}</pubDate>

            <guid isPermaLink="false">{{article.id}}</guid>
        </item>
        {% endfor %}
    </channel>
</rss>
